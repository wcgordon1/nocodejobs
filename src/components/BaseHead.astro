---
import "../styles/global.css";
import Metas from "./seo/Metas.astro";
import Favicons from "./seo/Favicons.astro";

const {
  title = "No Code Jobs",
  description = "No Code Jobs is the #1 hiring platform for no code developers.",
  socialImage = "/images/nolh.png",
  twitterImage = "/images/nolh.png",
  author = "No Code Jobs",
  
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<Metas
  title={title}
  description={description}
  url={canonicalURL}
  socialImage={socialImage}
  author={author}
  twitterImage={twitterImage}
/>
<Favicons />

<!-- Keep all your existing scripts and links below -->
<link href="https://api.fontshare.com/v2/css?f[]=jet-brains-mono@1,2&display=swap" rel="stylesheet" />
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
<script defer src="https://unpkg.com/@alpinejs/focus@3.10.3/dist/cdn.min.js"></script>
<script defer src="https://unpkg.com/alpinejs@3.10.3/dist/cdn.min.js"></script>
<!-- Mailgo -->
<script src="https://unpkg.com/mailgo@0.12.2/dist/mailgo.min.js"></script>
<!-- Pirsch -->
<script defer src="https://api.pirsch.io/pa.js"
    id="pianjs"
    data-code="miJbV3oT0a7ta5faCTT1eMaOJD40HTFn"></script>
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "url": "https://nocodejobs.org",
    "name": "No Code Jobs",
    "description": "A comprehensive job board for no-code developers, featuring jobs for Bubble, Webflow, Softr, Adalo, Flutter Flow, Framer, and Glide experts."
  }
  </script>
      