---
import { Code } from "astro/components";
const features = [
  {
    title: "Visual Development",
    description:
      "Experts in Bubble.io, Webflow, and other visual development platforms.",
  },
  {
    title: "CMS Development",
    description: "Specialists in WordPress, Shopify, and content management systems.",
  },
];
---

<section class="bg-white">
  <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-36">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-24 items-start">
      <div>
        <span class="text-sm font-medium tracking-wide text-blue-600 uppercase"
          >No Code Skills</span
        >
        <h2
          class="text-purple-900 font-semibold tracking-tight lg:text-5xl mt-6 text-3xl">
          Visual Development & CMS Platforms
        </h2>
        <p class="text-slate-500 mt-5">
          No Code developers need deep platform knowledge and design experience in their specialty.
          Visual development and CMS work requires different skills and approaches.
          <br />
          <br />
          From complex web applications to e-commerce stores, modern no-code developers combine
          visual design skills with technical platform expertise.
        </p>
        <ul
          role="list"
          class="grid grid-cols-2 gap-4 list-none lg:gap-6 mt-12">
          {
            features.map((feature) => (
              <li>
                <p class="font-semibold text-purple-900 text-base">
                  {feature.title}
                </p>
                <div class="mt-2 text-slate-500 text-sm">
                  {feature.description}
                </div>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="lg:mt-0 mt-12 h-full lg:order-first">
        <!-- Include these scripts somewhere on the page: -->
        <div class="lg:mt-0 mt-12 h-full">
          <div
            x-data="{
        tabSelected: 1,
        tabId: $id('tabs'),
        tabButtonClicked(tabButton){
            this.tabSelected = tabButton.id.replace(this.tabId + '-', '');
            this.tabRepositionMarker(tabButton);
        },
        tabRepositionMarker(tabButton){
            this.$refs.tabMarker.style.width=tabButton.offsetWidth + 'px';
            this.$refs.tabMarker.style.height=tabButton.offsetHeight + 'px';
            this.$refs.tabMarker.style.left=tabButton.offsetLeft + 'px';
        },
        tabContentActive(tabContent){
            return this.tabSelected == tabContent.id.replace(this.tabId + '-content-', '');
        }
    }"
            x-init="tabRepositionMarker($refs.tabButtons.firstElementChild);"
            class="relative lg:rounded-3xl">
            <div
              x-ref="tabButtons"
              class="relative inline-grid items-center justify-center w-full h-10 grid-cols-2 p-1 bg-slate-100 rounded-full select-none">
              <button
                :id="$id(tabId)"
                @click="tabButtonClicked($el);"
                type="button"
                class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 text-sm font-medium transition-all rounded-full cursor-pointer whitespace-nowrap"
                >Bubble.io</button
              >
              <button
                :id="$id(tabId)"
                @click="tabButtonClicked($el);"
                type="button"
                class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 text-sm font-medium transition-all rounded-md cursor-pointer whitespace-nowrap"
                >WordPress</button
              >
              <div
                x-ref="tabMarker"
                class="absolute left-0 z-10 w-1/2 h-full duration-300 ease-out"
                x-cloak>
                <div class="w-full h-full bg-white rounded-full shadow-sm">
                </div>
              </div>
            </div>
            <div
              class="relative w-full mt-2 content p-4 bg-[#14162a] rounded-3xl">
              <div
                :id="$id(tabId + '-content')"
                x-show="tabContentActive($el)"
                class="relative">
                <!-- Tab Content 1 - Replace with your content -->
                <section
                  class="text-xs font-mono mt-4 rounded-3xl hadow-2xl overflow-hidden h-full p-4">
                  <Code
                    code={`// Bubble.io Developer Skills

const bubbleDevelopment = {
  frontEnd: {
    design: ['Responsive Design', 'Custom Styles', 'Reusable Elements'],
    workflow: ['Page Logic', 'User Actions', 'Conditional States']
  },
  dataManagement: {
    database: ['Data Types', 'Relations', 'Privacy Rules'],
    api: ['API Connector', 'External APIs', 'Webhooks']
  },
  plugins: ['Analytics', 'Payment Processing', 'SEO']
};

// Core Competencies
const skills = [
  'Visual Programming',
  'Database Design',
  'API Integration'
];`}
                    lang="js"
                    theme="css-variables"
                  />
                </section>
                <!-- End Tab Content 1 -->
              </div>
              <div
                :id="$id(tabId + '-content')"
                x-show="tabContentActive($el)"
                class="relative"
                x-cloak>
                <section
                  class="text-xs font-mono mt-4 rounded-3xl hadow-2xl overflow-hidden h-full p-4">
                  <Code
                    code={`
// WordPress Developer Skills

class WordPressExpertise {
  private $themes = [
    'customization' => ['Elementor', 'Divi', 'Gutenberg'],
    'development' => ['Child Themes', 'Custom Templates', 'Hooks']
  ];
  
  private $plugins = [
    'ecommerce' => 'WooCommerce',
    'forms' => 'Gravity Forms',
    'seo' => 'Yoast SEO'
  ];

  private $core_skills = [
    'PHP Basics',
    'WordPress CLI',
    'Database Management'
  ];

  public function getRequiredKnowledge() {
    return [
      'Theme Customization',
      'Plugin Configuration',
      'Site Optimization'
    ];
  }
}`}
                    lang="php"
                    theme="css-variables"
                  />
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
