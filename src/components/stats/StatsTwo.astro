---
// Define your data
const stats = [
  { value: "14 Days", description: "Average time to hire qualified no-code developers" },
  { value: "92%", description: "Success rate for senior no-code placements" },
  { value: "150+", description: "Active no-code developers in our network" },
  { value: "45%", description: "Average salary increase for placed candidates" },
  { value: "24 Hours", description: "Maximum response time to job postings" },
  {
    value: "3+ Years",
    description: "Average experience of our no-code developers",
  },
];
---

<section>
  <div
    class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24">
    <span class="text-sm uppercase font-medium tracking-wide text-blue-600"
      >No Code Hiring Made Simple</span
    >
    <h2
      class="text-purple-900 font-semibold tracking-tight lg:text-5xl mt-6 text-3xl lg:text-balance">
      The Future of No-Code Development is Here
    </h2>
    <p class="text-slate-500 mt-6 lg:text-balance">
      Connect with expert Bubble, Webflow, Adalo and other no-code developers who can bring your vision to life without writing a single line of code.
    </p>

    <div class="gap-6 grid grid-cols-1 lg:grid-cols-3 mt-12">
      {
        stats.map((stat) => (
          <div>
            <p class="border-l-4 pl-4 font-semibold border-blue-500 tracking-tight text-purple-900">
              {stat.value}
            </p>
            <p class="mt-2 text-slate-500">{stat.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
