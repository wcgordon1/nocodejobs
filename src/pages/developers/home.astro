---
import { getCollection } from "astro:content";
const allPosts = await getCollection("developers");
import BaseLayout from "@/layouts/BaseLayout.astro";
import Entries from "@/components/integrations/Entries.astro";
import FaqThree from "@/components/faqs/FaqThree.astro";
const pageTitle = "No Code Developers. Find your next no code job. Hire no code developers.";
const pageDescription = "Discover the most in demand no code platforms and hire skilled no-code developers on our dedicated job board. Browse listings for Bubble, Webflow, Airtable, and other no-code platforms.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="bg-white">
    <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24">
      <span class="text-sm uppercase font-medium tracking-wide text-blue-600"
        >developers</span
      >
      <h2
        class="text-purple-900 font-semibold tracking-tight lg:text-5xl text-3xl lg:text-balance mt-6">
        No Code Platforms
      </h2>
      <p class="text-slate-500 mt-5 lg:text-pretty max-w-3xl">
        The no code platforms with the highest demand. If you donâ€™t find a job that fits, send us your resume. We connect with businesses daily and would be glad to assist you.      </p>
      <div class="mt-10 flex flex-col sm:flex-row gap-4 mb-24">
        <a
          class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 w-auto"
          href="/articles">
          Useful Articles
        </a>
        <a
          class="text-blue-600 items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-50 hover:bg-blue-100 w-auto"
          href="/contact">
          Send us your Resume
        </a>
      </div>
      <div>
        <ul
          role="list"
          class="grid grid-cols-2 lg:grid-cols-4 gap-4 list-none lg:gap-x-6 lg:gap-y-24 mt-12">
          {
            allPosts.slice().map((post) => (
              <Entries
                url={"/developers/" + post.slug}
                integration={post.data.integration}
                description={post.data.description}
                alt={post.data.integration}
                permissions={post.data.permissions}
                logo={post.data.logo.url}
              />
            ))
          }
        </ul>
      </div>
    </div>
  </section>
  <FaqThree />
  <section class="bg-slate-50">
    <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24 mt-24">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-purple-900 font-semibold tracking-tight text-3xl">
            Get started with No Code Jobs
          </h2>
          <div class="max-w-xl mt-6">
            <p class="text-slate-500">
              Browse our active positions or post a job to reach our network of skilled no code developers.
            </p>
          </div>
          <div class="mt-10 flex flex-col sm:flex-row gap-4">
            <a
              class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 w-auto"
              href="/open-positions">
              Open Positions
            </a>
            <a
              class="text-blue-600 items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-50 hover:bg-blue-100 w-auto"
              href="/post-a-job">
              Post a Job
            </a>
          </div>
        </div>
        <div class="mx-auto text-left">
          <div>
            <div
              class="gap-x-2 gap-y-14 lg:gap-12 grid grid-cols-1 lg:grid-cols-2">
              <div>
                <div class="space-y-3">
                  <div class="lg:inline-flex lg:items-center lg:gap-3">
                    <div
                      class="flex items-center justify-center size-8 text-blue-500 rounded-full bg-slate-100">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="size-5">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M21 7.5l-2.25-1.313M21 7.5v2.25m0-2.25l-2.25 1.313M3 7.5l2.25-1.313M3 7.5l2.25 1.313M3 7.5v2.25m9 3l2.25-1.313M12 12.75l-2.25-1.313M12 12.75V15m0 6.75l2.25-1.313M12 21.75V19.5m0 2.25l-2.25-1.313m0-16.875L12 2.25l2.25 1.313M21 14.25v2.25l-2.25 1.313m-13.5 0L3 16.5v-2.25"
                        ></path>
                      </svg>
                    </div>
                    <p class="mt-5 font-semibold text-purple-900 lg:mt-0">
                      Customer Success
                    </p>
                  </div>
                  <p class="text-sm text-slate-500 mt-5">
                    See how we've helped developers and businesses like yours.
                  </p>
                  <p class="mt-5">
                    <a
                      title="No Code Developer Testimonials"
                      aria-label="No Code Developer Testimonials"
                      href=""
                      class="text-blue-500 hover:text-blue-600 inline-flex items-center group">
                      View Testimonials
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="size-4 ml-3 group-hover:translate-x-2 transition duration-500 ease-in-out transform">
                        <path
                          fill-rule="evenodd"
                          d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                          clip-rule="evenodd"
                        ></path>
                      </svg>
                    </a>
                  </p>
                </div>
              </div>
              <div>
                <div class="space-y-3">
                  <div class="lg:inline-flex lg:items-center lg:gap-3">
                    <div
                      class="flex items-center justify-center size-8 text-blue-500 rounded-full bg-slate-100">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="size-5">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M21 7.5l-2.25-1.313M21 7.5v2.25m0-2.25l-2.25 1.313M3 7.5l2.25-1.313M3 7.5l2.25 1.313M3 7.5v2.25m9 3l2.25-1.313M12 12.75l-2.25-1.313M12 12.75V15m0 6.75l2.25-1.313M12 21.75V19.5m0 2.25l-2.25-1.313m0-16.875L12 2.25l2.25 1.313M21 14.25v2.25l-2.25 1.313m-13.5 0L3 16.5v-2.25"
                        ></path>
                      </svg>
                    </div>
                    <p class="mt-5 font-semibold text-purple-900 lg:mt-0">
                      Helpful Articles
                    </p>
                  </div>
                  <p class="text-sm text-slate-500 mt-5">
                    Articles and Guides to help you in your no code journey.
                  </p>
                  <p class="mt-5">
                    <a
                      title="No Code Articles"
                      aria-label="No Code Articles"
                      href="/articles"
                      class="text-blue-500 hover:text-blue-600 inline-flex items-center group">
                      Read Articles
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="size-4 ml-3 group-hover:translate-x-2 transition duration-500 ease-in-out transform">
                        <path
                          fill-rule="evenodd"
                          d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                          clip-rule="evenodd"
                        ></path>
                      </svg>
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
